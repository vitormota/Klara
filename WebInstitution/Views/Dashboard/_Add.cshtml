@model WebInstitution.Models.AdFormModel

<div class="col-md-12 col-xs-12 clearfix">
    <div id="add">
        <img src="~/Content/Images/pictogramas-08.png" />
    </div>
    <div id="add-inputs" class="row">
        <div class="col-md-5">
            <ul id="last-cupons">
                <li>
                    <div class="row">
                        <div class="col-md-2">
                            <div class="img"></div>
                        </div>
                        <div class="col-md-7">
                            <div class="details">
                                <span>Consulta Ortopédica</span>
                                <span>Porto</span>
                                <span>Porto</span>
                                <span>15-05-2014</span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="price">
                                <span>35€</span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <hr />
                        </div>
                    </div>
                </li>
                <li class="row">
                    <div class="col-md-2">
                        <div class="img"></div>
                    </div>
                    <div class="col-md-7">
                        <div class="details">
                            <span>Consulta Ortopédica</span>
                            <span>Hospital 44</span>
                            <span>Porto</span>
                            <span>15-05-2014</span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="price">
                            <span>35€</span>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        <div class="col-md-7">
            @using (Html.BeginForm("Create", "Ad", FormMethod.Post, new { enctype = "multipart/form-data" })) {
                <div class="form-group clearfix row">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.service)
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.service)
                    </div>
                </div>

                <div class="form-group clearfix row">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.specialty)
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.specialty)
                    </div>
                </div>

                <div class="form-group clearfix row">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.name)
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.name)
                    </div>
                </div>

                <div class="form-group clearfix row">
                    <div class="col-md-4">
                      @Html.LabelFor(model => model.price)
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.price)
                    </div>
                </div>

                <div class="form-group clearfix row">
                    <div class="col-md-4">
                       @Html.LabelFor(model => model.previous_price)
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.previous_price)
                    </div>
                </div>


                <div class="form-group clearfix row">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.total_cupons)
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.total_cupons)
                    </div>
                </div>

                <div class="form-group clearfix row">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.start_time)
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.start_time, new { type = "date" })
                    </div>
                </div>

                <div class="form-group clearfix row">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.end_time)
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.end_time, new { type = "date" })
                    </div>
                </div>

                <div class="form-group clearfix row">
                    <div class="col-md-4">
                        @Html.Label(Resources.AdImageName)
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.photo, new { type = "file"})
                    </div>
                </div>

                <div class="form-group clearfix row">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.description)
                    </div>
                    <div class="col-md-8">
                        @Html.TextAreaFor(model => model.description)
                    </div>
                </div>

                <input id="createAd" type="submit" value="Create" />
            }
        </div>
    </div>
</div>
